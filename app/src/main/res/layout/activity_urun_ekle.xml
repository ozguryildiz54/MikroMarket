<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="tr.com.greensoft.mikromarket.Activities.UrunEkleActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Stok Kartı Ekle"
            android:textColor="@android:color/holo_purple"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/urunAdiText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ürün Adı"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/barkodText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Barkod No"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kdv Oranı Seç"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/kdvSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:spinnerMode="dialog" />

        <EditText
            android:id="@+id/kdvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kdv Oranı"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/kdvHaricAlisText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kdv Hariç Alış"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/kdvDahilAlisText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kdv Dahil  Alış"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/kdvHaricSatisText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kdv Hariç  Satış"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/kdvDahilSatis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kdv Dahil  Satış"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/adetText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Adet"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clearScreen"
                android:text="Temizle" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="insert_support"
                android:text="Kaydet" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
